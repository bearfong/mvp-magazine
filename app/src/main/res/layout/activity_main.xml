<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bb_menu"/>

    <include
        layout="@layout/layout_loading"
        android:visibility="gone"/>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bb_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/viewPageBackground"
        app:bb_activeTabColor="#f0f0f0"
        app:bb_inActiveTabAlpha=".5"
        app:bb_inActiveTabColor="#959595"
        app:bb_showShadow="false"
        app:bb_tabXmlResource="@xml/bottom_bar_tabs"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="133dp"
        android:text="Button"/>
</RelativeLayout>
