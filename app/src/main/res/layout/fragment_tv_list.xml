<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <taiwan.no1.app.ui.customize.LoadMoreRecyclerView
        android:id="@+id/rv_tv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewPageBackground"
        tools:listitem="@layout/item_brief_tv"/>

    <ViewStub
        android:id="@+id/stub_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_error_msg"/>
</FrameLayout>