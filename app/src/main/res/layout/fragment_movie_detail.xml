<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:squint="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            squint:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.intrusoft.squint.DiagonalView
                android:id="@+id/dv_poster"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@color/lb_basic_card_content_text_color"
                squint:angle="12"
                squint:diagonalDirection="left_to_right"
                squint:gravity="right"
                squint:layout_collapseMode="parallax"/>

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/dv_poster"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:src="@color/lb_basic_card_content_text_color"
                squint:layout_collapseMode="parallax"/>

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="end"
                android:paddingEnd="16dp"
                android:text="Actor"
                android:textColor="#828282"
                android:textSize="18sp"
                android:textStyle="bold"
                squint:layout_collapseMode="parallax"
                squint:layout_scrollFlags="scroll|snap"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="end"
                android:paddingEnd="16dp"
                android:text="Fantastic Beasts"
                android:textColor="#626262"
                android:textSize="20sp"
                android:textStyle="bold"
                squint:layout_collapseMode="parallax"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <taiwan.no1.app.ui.customize.RollingNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        squint:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:padding="16dp"
                android:text="@string/lorem"
                android:textColor="#828282"
                android:textSize="16sp"/>

            <ViewStub
                android:id="@+id/stub_casts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/horizontal_content_cast"/>

            <ViewStub
                android:id="@+id/stub_crews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/horizontal_content_crew"/>
        </LinearLayout>
    </taiwan.no1.app.ui.customize.RollingNestedScrollView>

</android.support.design.widget.CoordinatorLayout>