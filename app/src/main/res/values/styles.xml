<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemTitle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CardDescribe">
        <item name="android:background">#55000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#dddddd</item>
    </style>

    <style name="Poster">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">#22000000</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Poster.Name">
        <item name="android:textColor">#626262</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Poster.Date">
        <item name="android:textColor">#828282</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#828282</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
